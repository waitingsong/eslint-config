{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2022"
  },
  "include": [
    "src/*.js",
    "src/*.mjs",
    "dist/*.cjs",
    "test/*.cjs",
    "test/*.mjs",
    "test/*.js",
    "test/*.ts"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.spec.ts",
    "node_modules*",
    "src/app/public",
    "src/app/views"
  ]
}
